            <p>
                @Html.ActionLink("Create New", "CreateInvoiceAndInvoiceLine", null, new { id = "lnkCreate2" })
            </p>

            <table class="table">
                <tr>
                    <th>Invoice Line</th>
                </tr>
                @if (Model.InvoiceLine != null && Session["InvoiceLineID"].ToString() != "")
                {
                    foreach (var item in Model.InvoiceLine)
                    {
                        string selectedRow = "";
                        if (item.InvoiceID == ViewBag.invoiceId)
                        {
                            selectedRow = "success";
                        }
                        <tr class="@selectedRow">

                            <td>
                                @Html.DisplayFor(modelItem => item.Invoice.InvoiceCode)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "EditInvoiceLine", new { invoiceId = item.Invoice.ID, invoiceLineId = item.ID }, new { @class = "lnkEdit2" })

                            </td>
                        </tr>
                    }
                }
            </table>
        }
    </div>

