@model List<ERPDomain.Entities.Dimension_TableRelationship>


@using (Html.BeginForm("LoadDimensionTableRelationship", "Dimension_Setting"))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <input type="submit" value="Batch Save" class="btn btn-default" />
    </div>

    <table class="table">
        <tr>
            <th>
                List of Table Relationship  (Activate)
            </th>
            <th></th>
        </tr>

        @*@foreach (var item in Model)*@
        @for (int i = 0; i < Model.Count; i++)
        {
            @Html.HiddenFor(modelItem => Model[i].ID)
            @Html.HiddenFor(modelItem => Model[i].Dimension_SettingID)
            @Html.HiddenFor(modelItem => Model[i].DimensionTable)
            @Html.HiddenFor(modelItem => Model[i].Status)
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => Model[i].DimensionTable)
                    @Html.CheckBoxFor(modelItem => Model[i].Activate)
                    @*@Html.CheckBoxFor(modelItem => Model[i].Activate, new { Style = "vertical-align:3px}" })*@
                </td> 
            </tr>
        }

    </table>
    
    <br />

}

